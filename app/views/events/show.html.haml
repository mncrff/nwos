-provide(:title, @event.name)

.page-banner
  .photo-banner

.page-header.container
  %p.breadcrumbs
    = link_to "Events", events_path, rel: 'up'
    %i.fa.fa-angle-right
  %h2
    = @event.name

.contrast-box
  .container
    %ul.tags
      - @event.event_categories.each do |c|
        %li 
          =link_to c.category.name, events_category_path(c.category.id)

  .event-information.white-box.container
    .col-1-2
      .table-grid
        .tcell-1-3
          %h3.table-header Date

        .tcell-2-3
          %p
            = render 'date_span_long', event: @event

      .table-grid
        .tcell-1-3
          %h3.table-header Hours

        .tcell-2-3
          = render 'hours', event: @event

      .table-grid
        .tcell-1-3
          %h3.table-header Admission

        .tcell-2-3
          %p
            -if @event.admission_info.present?
              =@event.admission_info.html_safe
            -else
              Free


    .col-1-2.omega
      %h3.table-header.location-header Location

      %p
        =@event.venue
        %br
        -if @event.venue_space.present?
          =@event.venue_space
          %br
        =@event.street_address
        %br
        =@event.city
        ="#{@event.state_province},"
        =@event.zip_code

      %p
        %a{href: get_directions_link("800 Convention Center Place, Seattle WA 98101"), target: '_blank'} 
          Get Directions
          %i.fa.fa-angle-right

  - if @event.geocode_lat.present? && @event.geocode_lng.present?
    .container.white-box
      .google_map_canvas{data: {:"google-map" => true, :lat => @event.geocode_lat, :lng => @event.geocode_lng, :zoom => 14}}
        =@event.venue



.container.event-additional-information
  %section.event-description.standard-section
    %p=@event.description.html_safe

  %section.event-vendors.standard-section
    -if @event.event_vendors.present?
      %h3.event-section-header
        ="Vendor".pluralize(@event.event_vendors.count)
      %ul
        -@event.event_vendors.each do |v|
          %li
            %h4.vendor-header
              =link_to v.vendor.name, v.vendor.url, class: 'vendor-name', target: '_blank'
              %br
              %span.vendor-location=v.vendor.location
            -if v.vendor.description.present?
              %p.vendor-description=v.vendor.description
            -if v.additional_info.present?
              %p.vendor-additional=v.additional_info
