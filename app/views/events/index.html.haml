-provide(:title, 'Events')

.page-banner
  .photo-banner

%section#events.standard-section
  %h2.section-header.container Upcoming Events

  .contrast-box
    .container

      %ul.events-filters
        %li
          %a.active{href:''} All
        %li
          %a{href:''} Sales
        %li
          %a{href:''} Judged Shows

    
    %ol.events-list
      - @events.each do |e|
        %li.container.table-grid
          .event-date.tcell-1-3
            = render 'date_span_short', event: e

          .event-title.tcell-2-3.omega
            = link_to e.name, event_path(e)
            .event-location
              = "#{e.city}, #{e.state_province}"
